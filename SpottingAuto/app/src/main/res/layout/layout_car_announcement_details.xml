<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <HorizontalScrollView
        android:id="@+id/carImagesScrollView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="305dp"
        android:layout_height="340dp"
        android:layout_below="@+id/carImagesScrollView"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        app:cardCornerRadius="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Offer type:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/offerTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sell"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Available"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/availabilityTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Price:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="120.000$"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Brand:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/brandTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Audi"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Model:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/modelTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A8"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Year"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/yearTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2018"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Color:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/colorTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="White"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Fuel type:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fuelTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Benzine"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Transmision:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/transmisionTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manual"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="On board:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/kmOnBoardTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="106.978"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Engine capacity:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/engineCapacityTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3.0"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="No. of doors:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/doorsNoTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="No. of seats:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seatsNoTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Contact:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contactTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0744333405"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="Short description:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descriptionTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:text="The 2018 Audi A8 is a flagship luxury sedan comes in a single, long-wheelbase L body style — hence the name A8 L. There are two trim levels available, each corresponding to a different engine. ... The A8 L 4.0T has a turbocharged 4.0-liter V8 good for 450 hp and 444 lb-ft of torque."
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>